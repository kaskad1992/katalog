{% extends 'base.twig' %}

{% block content %}
    <h1>
        Oceny książek:
    </h1>
    <hr>
    {% for flashMessage in app.session.getFlashBag.get('message') %}
    <div class="alert alert-{{ flashMessage.type }}">
        {{ flashMessage.content }}
    </div>
    {% endfor %}
{#	{% if is_granted('ROLE_ADMIN') %} #}
	<h2>
        <a href="{{ url('/votes/add') }}" class="btn btn-default" title="Add vote">
            Oceń książkę
        </a>
    </h2> 
{#	{% endif %} #}
   
     {% if votes|length > 0 %} 
        <table class="table">
            <thead>
                <tr>
                    <th>Tytuł</th>
					<th>Średnia ocen</th>
                    <th colspan="3">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for vote in votes %}
                <tr>
                    {#<td><a href="{{ url('/books/view', {'id': book.id}) }}" title="View book">{{ book.title|e }}</a></td>#}
                    {#<td>{{ grading.vote|e }}</td>#}
					<td>{{ vote.idBook|e }}</td>
					<td>{{ vote.idVote|e }}</td>
               </tr>
            {% endfor %} 
            </tbody>
        </table>
    {% else %} 
        <p>
            Brak ocen.
        </p>
     {% endif %} 
	<hr>
	
	
{% endblock %}
